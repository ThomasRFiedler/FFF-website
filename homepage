    <script>
        let cartItems = [];
        let adminVisible = false;

        function toggleAdmin() {
            const panel = document.getElementById('adminPanel');
            adminVisible = !adminVisible;
            panel.classList.toggle('hidden');
        }

        function addToCart(product) {
            cartItems.push(product);
            const cartBtn = document.querySelector('.cart-btn');
            cartBtn.textContent = `üõí Cart (${cartItems.length})`;
            
            // Simple notification
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 100px;
                right: 20px;
                background: #2d5a27;
                color: white;
                padding: 1rem;
                border-radius: 5px;
                z-index: 1000;
            `;
            notification.textContent = `${product} added to cart!`;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                document.body.removeChild(notification);
            }, 2000);
        }

        // Admin controls
        document.getElementById('heroTitle').addEventListener('input', function(e) {
            document.getElementById('heroTitleDisplay').textContent = e.target.value;
        });

        document.getElementById('heroSubtitle').addEventListener('input', function(e) {
            document.getElementById('heroSubtitleDisplay').textContent = e.target.value;
        });

        document.getElementById('primaryColor').addEventListener('input', function(e) {
            const color = e.target.value;
            document.documentElement.style.setProperty('--primary-color', color);
            
            // Update all elements with primary color
            const elements = document.querySelectorAll('.logo, .hero, footer, .add-to-cart');
            elements.forEach(el => {
                if (el.classList.contains('logo')) {
                    el.style.color = color;
                } else {
                    el.style.backgroundColor = color;
                }
            });
        });

        document.getElementById('accentColor').addEventListener('input', function(e) {
            const color = e.target.value;
            const elements = document.querySelectorAll('.cta-btn, .price');
            elements.forEach(el => {
                if (el.classList.contains('cta-btn')) {
                    el.style.backgroundColor = color;
                } else {
                    el.style.color = color;
                }
            });
        });

        document.getElementById('magPrice').addEventListener('input', function(e) {
            document.getElementById('magPriceDisplay').textContent = e.target.value;
        });

        document.getElementById('beefPrice').addEventListener('input', function(e) {
            document.getElementById('beefPriceDisplay').textContent = e.target.value;
        });

        document.getElementById('theme').addEventListener('change', function(e) {
            if (e.target.value === 'dark') {
                document.body.style.backgroundColor = '#1a1a1a';
                document.body.style.color = 'white';
            } else {
                document.body.style.backgroundColor = '#f8f9fa';
                document.body.style.color = '#333';
            }
        });

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
